---
const strong = [
  "GraphRAG",
  "Knowledge Graphs",
  "NLP/Embeddings",
  "Cost-Sensitive ML",
  "Decision Science",
  "MLOps",
  "Uncertainty Quantification",
];

const moderate = [
  "Computer Vision",
  "Data Engineering",
  "Distributed Systems",
  "HPC",
  "B2B/Enterprise Experimentation (A/B testing, controlled rollouts)",
];

const gaps = [
  "Consumer Product",
  "Mobile Development",
  "Consumer Product Growth (A/B testing, funnels, retention)",
];
---

<section class="px-6 md:px-12 lg:px-24 py-16 max-w-6xl mx-auto">
  <h2 class="text-5xl md:text-6xl font-bold mb-12">Skills Matrix</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- STRONG -->
    <div class="bg-green-950 border border-green-900 rounded-lg p-6">
      <h3 class="text-xl font-semibold mb-4">STRONG</h3>
      <ul class="space-y-2">
        {strong.map((skill) => (
          <li class="flex items-center gap-2 text-sm text-gray-300">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            {skill}
          </li>
        ))}
      </ul>
    </div>
    
    <!-- MODERATE -->
    <div class="bg-gray-900 border border-gray-800 rounded-lg p-6">
      <h3 class="text-xl font-semibold mb-4">MODERATE</h3>
      <ul class="space-y-2">
        {moderate.map((skill) => (
          <li class="flex items-center gap-2 text-sm text-gray-300">
            <svg class="w-5 h-5 text-gray-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <circle cx="10" cy="10" r="8"/>
            </svg>
            {skill}
          </li>
        ))}
      </ul>
    </div>
    
    <!-- GAPS -->
    <div class="bg-orange-950 border border-orange-900 rounded-lg p-6">
      <h3 class="text-xl font-semibold mb-4">GAPS (I'LL TELL YOU)</h3>
      <ul class="space-y-2">
        {gaps.map((skill) => (
          <li class="flex items-center gap-2 text-sm text-gray-300">
            <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            {skill}
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>
