---
import { getCollection } from 'astro:content';
import ExperienceCard from './ExperienceCard.astro';

const experiences = (await getCollection('experience')).sort((a, b) => {
  const orderA = a.data.order ?? 999;
  const orderB = b.data.order ?? 999;
  return orderA - orderB;
});
---

<section class="px-6 md:px-12 lg:px-24 py-16 max-w-6xl mx-auto">
  <h2 class="text-5xl md:text-6xl font-bold mb-4">Experience</h2>
  <p class="text-gray-400 text-lg mb-12 max-w-3xl">
    Each role includes queryable AI contextâ€”the real story behind the bullet points.
  </p>
  
  <div class="space-y-6">
    {experiences.map((experience) => (
      <ExperienceCard experience={experience} />
    ))}
  </div>
</section>
